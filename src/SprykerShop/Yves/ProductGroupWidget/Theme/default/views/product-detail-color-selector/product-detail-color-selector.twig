{% extends template('widget') %}

{% define data = {
    items: _widget.productGroupItems | default([]),
} %}

{% block body %}
    {% if data.items | length > 1 %}
        <hr>
        {% include molecule('product-detail-color-selector', 'ProductGroupWidget') with {
            data: {
                items: data.items,
                selectionTag: 'a',
            },
        } only %}
    {% endif %}
{% endblock %}
