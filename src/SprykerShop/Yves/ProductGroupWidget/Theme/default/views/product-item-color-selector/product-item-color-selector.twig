{% extends template('widget') %}

{% define data = {
    items: _widget.productGroupItems | default([]),
    parentJsName: '',
} %}

{% block body %}
    {% if data.items | length > 1 %}
        <hr>
        {% include molecule('product-item-color-selector', 'ProductGroupWidget') with {
            modifiers: ['center'],
            data: {
                items: data.items,
                parentJsName: data.parentJsName,
            },
        } only %}
        <hr>
    {% endif %}
{% endblock %}
